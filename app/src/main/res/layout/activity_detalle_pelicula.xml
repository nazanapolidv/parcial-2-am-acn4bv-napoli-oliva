<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_degradado"
    android:padding="@dimen/padding_general"
    tools:context=".DetallePeliculaActivity">

    <ImageView
        android:id="@+id/detalleImagen"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/descripcion_poster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:src="@drawable/akira" />

        <LinearLayout
            android:id="@+id/detalleInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/detalleImagen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            android:id="@+id/detalleTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextoPrincipal"
            android:textSize="@dimen/text_size_titulo"
            android:textStyle="bold"
            tools:text="Título de la Película" />

        <TextView
            android:id="@+id/detalleDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextoSecundario"
            android:textSize="@dimen/text_size_subtitulo"
            android:layout_marginTop="4dp"
            tools:text="Acción · 2025" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:numStars="5"
                android:stepSize="1.0"
                android:theme="@style/Widget.AppCompat.RatingBar"
                android:progressTint="@color/colorEstrellas"
                />

            <Button
                android:id="@+id/btnTrailer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ver trailer"
                android:textColor="@color/colorTextoPrincipal"
                android:backgroundTint="@color/colorBotonNeutro"
                android:drawableLeft="@android:drawable/ic_media_play"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnFavorito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar a Favoritos"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/colorAcento"
                android:textColor="@color/colorTextoPrincipal" />

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/detalleInfoLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnVolver">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detalleDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextoPrincipal"
                android:textSize="18sp"
                tools:text="Esta es la descripción detallada de la película. Es un texto largo para justificar el uso del ScrollView..." />

            <LinearLayout
                android:id="@+id/reservaLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/card_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reserva de Entradas"
                    android:textColor="@color/colorAcento"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputCantidadEntradas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="Cantidad de Entradas"
                    android:inputType="number"
                    android:text="1"
                    android:maxLength="2"
                    android:textColorHint="@color/colorTextoSecundario"
                    android:textColor="@color/colorTextoPrincipal"
                    android:background="@drawable/rounded_edittext"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/txtCostoTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Costo Total: $0.00"
                    android:textColor="@color/colorTextoPrincipal"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnConfirmarReserva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Confirmar Reserva"
                    android:backgroundTint="@color/colorAcento"
                    android:textColor="@color/colorTextoPrincipal" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_volver"
        android:backgroundTint="@color/colorAcento"
        android:textColor="@color/colorTextoPrincipal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>