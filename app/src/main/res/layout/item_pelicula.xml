<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/card_background"
        android:elevation="6dp"
        android:clickable="false"
        android:focusable="false">

        <ImageView
            android:id="@+id/imgPelicula"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtTituloPelicula"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Título de la Película Largo"
            android:textColor="@color/colorAcento"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/imgPelicula"
            app:layout_constraintStart_toEndOf="@id/imgPelicula"
            app:layout_constraintEnd_toEndOf="@id/iconDetalle"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/txtSubtituloPelicula"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Género • Año"
            android:textColor="@color/colorTextoSecundario"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txtTituloPelicula"
            app:layout_constraintStart_toStartOf="@id/txtTituloPelicula"
            app:layout_constraintEnd_toEndOf="@id/iconDetalle"
            app:layout_constraintBottom_toBottomOf="@id/imgPelicula"/>

        <ImageView
            android:id="@+id/iconDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send"
            android:rotation="180"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/colorTextoSecundario"
            android:contentDescription="Ver Detalle"
            android:clickable="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>